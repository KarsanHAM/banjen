<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">@color/banjen_primary_dark</item>
    <item name="colorPrimary">@color/banjen_primary</item>
    <item name="colorAccent">@color/banjen_accent</item>
    <item name="colorControlHighlight">@color/banjen_accent</item>

    <item name="android:windowBackground">@color/banjen_background</item>
    <item name="android:colorBackgroundCacheHint">@color/banjen_background</item>

    <item name="colorButtonNormal">@color/banjen_primary</item>
  </style>

  <style name="EarButton" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:textColor">#fff</item>
    <item name="android:background">@drawable/toggle_button</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
  </style>

</resources>
